<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-hits-table" author="lysmux">
        <createTable tableName="hits">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="owner_id" type="UUID">
                <constraints nullable="false" primaryKey="true"
                             foreignKeyName="fx_hits_owner_id"
                             references="users(id) ON DELETE CASCADE"/>
            </column>

            <column name="x" type="float">
                <constraints nullable="false" />
            </column>

            <column name="y" type="float">
                <constraints nullable="false" />
            </column>

            <column name="r" type="float">
                <constraints nullable="false" />
            </column>

            <column name="hit" type="boolean">
                <constraints nullable="false" />
            </column>

            <column name="execution_time" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createIndex tableName="hits" indexName="idx_hits_owner_id">
            <column name="owner_id" />
        </createIndex>

    </changeSet>

</databaseChangeLog>