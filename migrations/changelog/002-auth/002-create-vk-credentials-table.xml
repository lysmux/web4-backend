<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="002-create-vk-credentials-table" author="lysmux">
        <createTable tableName="vk_credentials">

            <column name="user_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fx_vk_cred_user_id"
                             references="users(id) ON DELETE CASCADE"/>
            </column>

            <column name="vk_id" type="bigint">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addPrimaryKey tableName="vk_credentials"
                       columnNames="user_id, vk_id"
                       constraintName="pk_vk_cred"/>

        <createIndex tableName="vk_credentials" indexName="idx_vk_cred_user_id">
            <column name="user_id" />
        </createIndex>
        <createIndex tableName="vk_credentials"
                     indexName="idx_vk_cred_vk_id">
            <column name="vk_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>