<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-create-passkey-credentials-table" author="lysmux">
        <createTable tableName="passkey_credentials">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="UUID">
                <constraints nullable="false"
                             foreignKeyName="fx_vk_cred_user_id"
                             references="users(id) ON DELETE CASCADE"/>
            </column>

            <column name="credential_id" type="BYTEA">
                <constraints nullable="false"/>
            </column>

            <column name="public_key" type="BYTEA">
                <constraints nullable="false"/>
            </column>

            <column name="aagu_id" type="BYTEA">
                <constraints nullable="false"/>
            </column>

            <column name="sign_count" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createIndex tableName="passkey_credentials" indexName="idx_passkey_cred_user_id">
            <column name="user_id" />
        </createIndex>
        <createIndex tableName="passkey_credentials" indexName="idx_passkey_cred_credential_id">
            <column name="credential_id" />
        </createIndex>

    </changeSet>

</databaseChangeLog>